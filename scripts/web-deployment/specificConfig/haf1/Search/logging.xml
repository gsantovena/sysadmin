<?xml version="1.0" encoding="UTF-8"?>
<log4net>
	<appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="C:\inetpub\logs\BWAppLogs\Search\search-log-[%processid].txt" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maxSizeRollBackups value="2" />
		<maximumFileSize value="10MB" />
		<staticLogFileName value="true" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="ERROR" />
			<levelMax value="FATAL" />
		</filter>
	</appender>

	<!-- to use EventLogAppender first must create specific event source using installer and running it as administrator. http://support.microsoft.com/default.aspx?scid=kb;en-us;329291 -->
	<appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
		<applicationName value="Brokersweb" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
		</layout>
	</appender>

	<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
		<to value="yerrors@brokersweb.com" />
		<from value="no-reply@brokersweb.com" />
		<subject value="SEARCHER-HAF1-ERROR" />
		<smtpHost value="10.1.16.39" />
		<bufferSize value="1" />
		<lossy value="true" />
		<evaluator type="log4net.Core.LevelEvaluator,log4net">
			<threshold value="ERROR" />
		</evaluator>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %property{log4net:HostName} [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
		</layout>
	</appender>
	
	<root>
		<level value="ERROR" />
		<appender-ref ref="FileAppender" />
		<appender-ref ref="SmtpAppender" />
	</root>

	<!-- <logger name="SearchApi.Log" additivity="false">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger> -->

</log4net>
